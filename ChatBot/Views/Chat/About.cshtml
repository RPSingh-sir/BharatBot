@{
    ViewData["Title"] = "About BharatBot";
}

<div class="about-container">

    <!-- HERO -->
    <section class="about-hero">
        <div class="hero-badge">🇮🇳 Made in India</div>
        <h1>BharatBot</h1>
        <p>
            A swadeshi AI chatbot built for India — secure, intelligent,
            and designed with Indian users in mind.
        </p>
    </section>

    <!-- PURPOSE -->
    <section class="about-section">
        <h2>Our Purpose</h2>
        <p>
            BharatBot is an Indian conversational AI platform created to
            empower users with fast, meaningful, and context-aware answers.
            It focuses on simplicity, trust, and control — without depending
            on heavy external ecosystems.
        </p>
    </section>

    <!-- VALUES -->
    <section class="about-section">
        <h2>What Makes BharatBot Different?</h2>
        <ul class="features">
            <li>🇮🇳 Swadeshi-first mindset</li>
            <li>🔒 Full control over user data</li>
            <li>🧠 Context-aware conversations</li>
            <li>⚡ Lightweight & fast UI</li>
            <li>🗂️ Persistent chat history</li>
            <li>🛠️ Built for extensibility</li>
        </ul>
    </section>

    <!-- HOW IT WORKS -->
    <section class="about-section">
        <h2>How It Works</h2>
        <p>
            A new conversation starts only when the user sends their first message.
            Every message is processed intelligently and stored securely, allowing
            users to resume conversations anytime without losing context.
        </p>
    </section>

    <!-- TECH -->
    <section class="about-section">
        <h2>Technology Stack</h2>
        <div class="tech-stack">
            <span>ASP.NET MVC</span>
            <span>Entity Framework Core</span>
            <span>SQL Server</span>
            <span>JavaScript</span>
            <span>HTML5</span>
            <span>CSS3</span>
        </div>
    </section>

    <!-- VISION -->
    <section class="about-section about-vision">
        <h2>Our Vision</h2>
        <p>
            BharatBot aims to become a reliable Indian AI assistant platform
            that respects privacy, promotes local innovation, and scales
            with real-world needs — from individuals to enterprises.
        </p>
    </section>

</div>


