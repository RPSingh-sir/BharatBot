@{
    ViewData["Title"] = "Chatbot";
}

<div class="app">

    <!-- LEFT SIDEBAR -->
    <div class="sidebar">
        <div class="sidebar-header">Your Chats</div>
        <ul id="chatList" class="chat-list"></ul>
        <button id="newChatBtn" class="new-chat">+ New Chat</button>
    </div>

    <!-- RIGHT CHAT WINDOW -->
    <div class="chat-container">

        <div class="chat-header">🗣️ My Chatbot</div>
        <div id="chatBox" class="chat-box"></div>

        <div class="chat-input">
            <input type="text" id="userInput" placeholder="Type your message..." />
            <button id="sendBtn">Send</button>
        </div>

       


    </div>

</div>

<style>
    body {
        margin: 0;
        font-family: 'Segoe UI', sans-serif;
        background: #f4f6f8;
    }

    .app {
        display: flex;
        height: 80vh;
        padding: 20px;
    }

    .sidebar {
        width: 260px;
        background: #111827;
        color: #fff;
        display: flex;
        flex-direction: column;
    }

    .sidebar-header {
        padding: 16px;
        font-size: 16px;
        font-weight: 600;
        border-bottom: 1px solid #1f2937;
    }

    .chat-list {
        flex: 1;
        list-style: none;
        padding: 0;
        margin: 0;
        overflow-y: auto;
    }

        .chat-list li {
            padding: 12px 16px;
            cursor: pointer;
            border-bottom: 1px solid #1f2937;
            font-size: 14px;
        }

            .chat-list li:hover {
                background: #1f2937;
            }

    .new-chat {
        border: none;
        background: #4f46e5;
        color: #fff;
        padding: 12px;
        cursor: pointer;
    }

    .chat-container {
        flex: 1;
        display: flex;
        flex-direction: column;
        background: #fff;
    }

    .chat-header {
        padding: 14px;
        background: #f9fafb;
        border-bottom: 1px solid #ddd;
        font-weight: 600;
        text-align: center;
    }

    .chat-box {
        flex: 1;
        padding: 16px;
        overflow-y: auto;
        background: #f9fafb;
    }

    .message {
        max-width: 75%;
        padding: 10px 14px;
        border-radius: 12px;
        margin-bottom: 10px;
        font-size: 14px;
        word-wrap: break-word;
    }

        .message.user {
            background: #4f46e5;
            color: #fff;
            margin-left: auto;
        }

        .message.bot {
            background: #e5e7eb;
            color: #111;
        }

            .message.bot pre {
                background: #111827;
                color: #e5e7eb;
                padding: 12px;
                border-radius: 8px;
                overflow-x: auto;
            }

    .chat-input {
        display: flex;
        padding: 12px;
        border-top: 1px solid #ddd;
    }

        .chat-input input {
            flex: 1;
            padding: 10px;
            border-radius: 8px;
            border: 1px solid #ccc;
        }

        .chat-input button {
            margin-left: 8px;
            padding: 10px 16px;
            background: #4f46e5;
            border: none;
            color: white;
            border-radius: 8px;
            cursor: pointer;
        }
</style>

<script>
    document.addEventListener("DOMContentLoaded", () => {

        const greetings = [
            "Hello 👋 How can I help you today?",
            "Hi there! Ask me anything 😊",
            "Welcome! What would you like to know? 🙏"
        ];

        let currentChatId = null;
        let hasStarted = false;

        /* 🔥 FIXED MESSAGE RENDERER */
        function appendMessage(role, text, isWelcome = false) {
            const chatBox = document.getElementById("chatBox");
            const div = document.createElement("div");
            div.className = `message ${role}`;

            if (role === "bot") {
                div.innerHTML = text;     // ✅ HTML render
            } else {
                div.innerText = text;    // ✅ safe user text
            }

            if (isWelcome) div.dataset.welcome = "true";
            chatBox.appendChild(div);
            chatBox.scrollTop = chatBox.scrollHeight;
        }

        function showGreetingIfEmpty() {
            const chatBox = document.getElementById("chatBox");
            if (!currentChatId && chatBox.children.length === 0) {
                appendMessage("bot", greetings[Math.floor(Math.random() * greetings.length)], true);
            }
        }

        async function loadChats() {
            const res = await fetch("/Chat/GetChats");
            const chats = await res.json();

            const list = document.getElementById("chatList");
            list.innerHTML = "";

            chats.forEach(c => {
                const li = document.createElement("li");
                li.textContent = c.title;
                li.onclick = () => selectChat(c.chatId);
                list.appendChild(li);
            });
        }

        async function selectChat(chatId) {
            currentChatId = chatId;
            hasStarted = true;

            const res = await fetch(`/Chat/GetMessages/${chatId}`);
            const messages = await res.json();

            const chatBox = document.getElementById("chatBox");
            chatBox.innerHTML = "";

            messages.forEach(m => appendMessage(m.role, m.content));
        }

        async function sendMessage() {
            const input = document.getElementById("userInput");
            const text = input.value.trim();
            if (!text) return;
            input.value = "";

            if (!currentChatId) {
                const res = await fetch("/Chat/CreateChat", { method: "POST" });
                const data = await res.json();
                currentChatId = data.chatId;
                await loadChats();
            }

            appendMessage("user", text);

            await fetch("/Chat/SaveMessage", {
                method: "POST",
                headers: { "Content-Type": "application/x-www-form-urlencoded" },
                body: `chatId=${currentChatId}&role=user&content=${encodeURIComponent(text)}`
            });

            const res = await fetch(`/Chat/AskGet?question=${encodeURIComponent(text)}`);
            const data = await res.json();

            appendMessage("bot", data.response);

            await fetch("/Chat/SaveMessage", {
                method: "POST",
                headers: { "Content-Type": "application/x-www-form-urlencoded" },
                body: `chatId=${currentChatId}&role=bot&content=${encodeURIComponent(data.response)}`
            });
        }

        document.getElementById("sendBtn").onclick = sendMessage;
        document.getElementById("newChatBtn").onclick = () => {
            currentChatId = null;
            hasStarted = false;
            document.getElementById("chatBox").innerHTML = "";
            showGreetingIfEmpty();
        };
        document.getElementById("userInput").addEventListener("keydown", e => {
            if (e.key === "Enter") sendMessage();
        });

        loadChats().then(showGreetingIfEmpty);
    });
</script>
