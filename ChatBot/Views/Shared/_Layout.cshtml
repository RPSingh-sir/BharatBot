<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ChatBot</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ChatBot.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
</head>

<body class="bg-light">

    <!-- 🔹 NAVBAR -->
    <header>
        
        <nav class="navbar navbar-expand-lg navbar-glass fixed-top">
            
                <div class="container-fluid">

                <!-- changed from container-fluid -->
                <!-- Logo -->
                <a class="navbar-brand d-flex align-items-center gap-2"
                   asp-controller="Home"
                   asp-action="Index">

                    <img src="https://th.bing.com/th/id/OIP.uRNi3aEnSAWr1p-_O4ooqQAAAA?w=224&h=180&c=7&r=0&o=7&dpr=1.3&pid=1.7&rm=3"
                         class="brand-logo-circle" />

                    <span class="fw-bold text-white">
                        Bharat<span class="logo-accent">Bot</span>
                    </span>
                </a>

                <!-- Toggle -->
                <button class="navbar-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#mainNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Nav Links -->
                <div class="collapse navbar-collapse" id="mainNavbar">

                    <ul class="navbar-nav mx-auto gap-4 text-center" style="padding-left:172px;">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Chat" asp-action="Index">Chat</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Chat" asp-action="About">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Contact">Contact Us</a>
                        </li>
                    </ul>

                    <!-- Auth Buttons -->
                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item">
                                <a class="btn btn-glow"
                                   asp-controller="Account"
                                   asp-action="Logout">
                                    Logout
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-glow"
                                   asp-controller="Account"
                                   asp-action="Login">
                                    Get Started
                                </a>
                            </li>
                        }
                    </ul>

                </div>
            </div>
        </nav>



    </header>


    <!-- 🔹 MAIN CONTENT (NO CONTAINER = FULL WIDTH) -->
    <main class="p-0">
        @RenderBody()
    </main>

    


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
