@{
    ViewData["Title"] = "Contact Us";
}

<div class="container py-5">
    <div class="row justify-content-center">

        <div class="col-lg-10">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="row g-0">

                    <!-- Left Info Section -->
                    <div class="col-md-5 bg-primary text-white p-5 rounded-start-4">
                        <h3 class="fw-bold mb-3">Get in Touch</h3>
                        <p class="mb-4">
                            Have questions about ChatBot? We'd love to hear from you.
                            Fill out the form and our team will get back to you shortly.
                        </p>

                        <div class="mb-3">
                            <strong>Email:</strong><br />
                            bharatbotapp@gmail.com
                        </div>

                        <div class="mb-3">
                            <strong>Phone:</strong><br />
                            +91 98765 43210
                        </div>

                        <div>
                            <strong>Location:</strong><br />
                            A-204, Sawai Man Singh road, jaipur - Rj, India
                        </div>
                    </div>

                    <!-- Right Form Section -->
                    <div class="col-md-7 p-5">
                        <h4 class="fw-bold mb-4 text-center">Contact Form</h4>

                        <form method="post">

                            <div class="mb-3">
                                <label class="form-label">Full Name</label>
                                <input type="text"
                                       name="Name"
                                       class="form-control form-control-lg"
                                       placeholder="Enter your name"
                                       required />
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Email</label>
                                <input type="email"
                                       name="Email"
                                       class="form-control form-control-lg"
                                       placeholder="Enter your email"
                                       required />
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Subject</label>
                                <input type="text"
                                       name="Subject"
                                       class="form-control form-control-lg"
                                       placeholder="Enter subject"
                                       required />
                            </div>

                            <div class="mb-4">
                                <label class="form-label">Message</label>
                                <textarea name="Message"
                                          rows="4"
                                          class="form-control form-control-lg"
                                          placeholder="Write your message..."
                                          required></textarea>
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary btn-lg rounded-pill">
                                    Send Message
                                </button>
                            </div>

                        </form>

                    </div>

                </div>
            </div>
        </div>

    </div>
</div>
